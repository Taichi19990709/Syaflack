<%= stylesheet_link_tag "post.index", :media => "all" %>

<div id = "searchmodal"></div>
<div id = "editmodal"></div>
<div id = "showschedule"></div>
<body>
    <div class = "container">

    <br>
    
    <h4>直近のイベント</h4>
    <div id="allschedules">
    <%= render 'schedules', schedules: @schedules %>
    </div>
    <br>

    </div>
    

<div class = "container mt-2">
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  新しいタスク
</button>
</div>

<div class = "container mt-2">
<h3>やること一覧</h3>
</div>

<div id="alltasks">
  <%= render 'posts', posts: @posts %>
</div>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">新しいタスク</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
　　　<%= form_for @post, remote: true do |form| %>
      <div class="modal-body">

          <br>
          <div class="form-group form-floating">
          <%= form.text_field :task,size:55, class:"form-control", placeholder:"新しい課題",id:"floatingInput" ,required:true%>
          <label for="floatingInput">新しい課題</label>
          </div>
          
          <br>

          <div class="form-group">
          <%= form.select :importanceoftask, [["高", "高"], ["中", "中"], ["低", "低"]] ,{ include_blank:"重要度"},{class:'form-control', required: true}%>
          </div>
    
          <br>

          <div class="form-group">
          <%= label :datetime, "期限" %>
          <%= form.datetime_field :datetime,size:140, class:"form-control", required:true %>
          </div>
          
          <br>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-lg" data-bs-dismiss="modal">キャンセル</button>
        <%= form.submit "追加する", class: "btn-primary btn-lg" %>
      </div>
      <% end %>
    </div>
  </div>
</div>    
</body>

